import java.util.LinkedList;

public class BFS extends Search {

	public BFS() {
		super.name = "BFS";
		super.tree = new Tree<Grid>(null);
		super.q = new LinkedList<Tree.Node>(null);
	}

	public Tree.Node GeneralSearch(Problem p) {
		Tree tree = new Tree<Grid>((Grid) p.getInitialState().getState());
		q.addLast(tree.getRoot());
		while (true) {
			if (q.isEmpty())
				return null;
			if (p.goalTest((Grid) q.getFirst().getState()))
				return q.removeFirst();
			expand(q.removeFirst());
		}
	}

	public void expand(Tree.Node n) {
		
	}
}
